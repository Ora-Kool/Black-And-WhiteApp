<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="xyz.bhent.production">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.BlacknWhiteHome"
            android:label="Home"
            android:theme="@style/BlacknWhiteTheme"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Activities.Selections"
            android:theme="@style/Theme.AppCompat.Light.Dialog"
            android:label="@string/select"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activities.Availables"
            android:theme="@style/BlacknWhiteTheme"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>
