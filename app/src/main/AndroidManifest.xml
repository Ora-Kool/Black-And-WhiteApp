<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="xyz.bhent.production">

    <uses-permission android:name="android.permission.INTERNET" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.Drinks"
            android:label="Drinks"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.Selections"
            android:label="@string/select"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.Dialog" />
        <activity
            android:name=".Activities.Availables"
            android:screenOrientation="portrait"
            android:theme="@style/BlacknWhiteTheme" />
        <activity
            android:name=".Activities.Home"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activities.Food"></activity>
        <activity
            android:name=".Activities.AdvancedCocktail"
            android:screenOrientation="portrait"
            android:label="Cocktail"
            android:theme="@style/BlacknWhiteTheme"/>

    </application>

</manifest>
