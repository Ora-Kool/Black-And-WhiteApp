<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    tools:context=".Activities.Selections">


    <LinearLayout
        android:id="@+id/header_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal">

    <TextView
        android:id="@+id/selected_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selected Item"
        android:textColor="#000000"
        android:textSize="25sp"
        android:gravity="center"
        android:textStyle="bold"
        android:padding="6dp"/>
    </LinearLayout>

    <TableLayout
        android:id="@+id/table_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_text"
        android:layout_centerHorizontal="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/half_bottle"
                android:text="Conso"
                android:textSize="15sp"
                android:singleLine="true"
                android:textStyle="bold"
                android:padding="1dp"
                android:layout_marginRight="15dp"
                android:textColor="#000000"
                android:layout_width="10dp"
                android:layout_height="wrap_content" />

            <CheckBox
                android:id="@+id/half_checked"
                android:layout_width="50dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/half_price"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:text="10,000   FCFA"
                android:singleLine="true"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:textSize="15sp"/>


        </TableRow>
        <TextView
            android:layout_height="30dp"/>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/one_bottle"
                android:text="1/2 Bottle"
                android:textSize="19sp"
                android:textStyle="bold"
                android:padding="5dp"
                android:textColor="#000000"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />

            <CheckBox
                android:id="@+id/one_checked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/one_price"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:singleLine="true"
                android:text="25,000   FCFA"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="15sp"/>



        </TableRow>
        <TextView
            android:layout_height="30dp"/>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/two_bottles"
                android:text="Bottle"
                android:textSize="19sp"
                android:textStyle="bold"
                android:padding="5dp"
                android:textColor="#000000"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />

            <CheckBox
                android:id="@+id/two_checked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/two_price"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:text="50,000   FCFA"
                android:textStyle="bold"
                android:singleLine="true"
                android:textColor="#000000"
                android:textSize="15sp"/>


        </TableRow>
