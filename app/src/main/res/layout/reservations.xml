<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="xyz.bhent.production.Activities.Reservations">

    <LinearLayout
        android:id="@+id/header_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal">

    <TextView
        android:id="@+id/selected_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selected Item"
        android:textColor="#000000"
        android:textSize="25sp"
        android:gravity="center"
        android:textStyle="bold"
        android:padding="6dp"/>
    </LinearLayout>

    <TableLayout
        android:id="@+id/table_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_text"
        android:layout_centerHorizontal="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/half_bottle"
                android:text="1/2 Bottle"
                android:textSize="19sp"
                android:textStyle="bold"
                android:padding="5dp"
                android:textColor="#000000"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:text="Price"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="19sp"/>
            <CheckBox
                android:id="@+id/half_checked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </TableRow>
        <TextView
            android:layout_height="30dp"/>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/one_bottle"
                android:text="1 Bottle"
                android:textSize="19sp"
                android:textStyle="bold"
                android:padding="5dp"
                android:textColor="#000000"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:text="Price"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="19sp"/>
            <CheckBox
                android:id="@+id/one_checked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </TableRow>
        <TextView
            android:layout_height="30dp"/>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/two_bottles"
                android:text="2 Bottles"
                android:textSize="19sp"
                android:textStyle="bold"
                android:padding="5dp"
                android:textColor="#000000"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:text="Price"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="19sp"/>
            <CheckBox
                android:id="@+id/two_checked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </TableRow>
        <TextView
            android:layout_height="30dp"/>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/three_bottles"
                android:text="3 Bottles"
                android:textSize="19sp"
                android:textStyle="bold"
                android:padding="5dp"
                android:textColor="#000000"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:text="Price"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="19sp"/>
            <CheckBox
                android:id="@+id/three_checked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </TableRow>

    </TableLayout>
    <LinearLayout
        android:layout_marginTop="50dp"
        android:id="@+id/divider_layer3"
        android:layout_width="match_parent"
        android:layout_below="@+id/table_content"
        android:layout_height="60dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_to_card"
        android:textSize="12sp"
        android:background="@color/colorPrimary"
        android:id="@+id/button"
        android:textStyle="normal"
        android:textColor="@color/bg_screen1"
        android:textAllCaps="false"/>

    </LinearLayout>

</RelativeLayout>
